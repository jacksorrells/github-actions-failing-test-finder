{
  "manifest_version": 3,
  "name": "GitHub Actions Emoji Paster",
  "version": "1.0",
  "description": "A Chrome extension to paste an emoji into the GitHub Actions log search field.",
  "permissions": ["activeTab"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": [
        "*://github.com/*"
      ]
    }
  ],
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+B",
        "mac": "Command+B"
      }
    }
  }
}
